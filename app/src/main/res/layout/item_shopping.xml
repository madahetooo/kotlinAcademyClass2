<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/txShoppingItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shopping_item_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txShoppingItemAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivShoppingItemDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txShoppingItemAmount"
        app:srcCompat="@drawable/ic_delete" />

    <ImageView
        android:id="@+id/ivShoppingItemAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txShoppingItemName"
        app:layout_constraintTop_toBottomOf="@+id/txShoppingItemName"
        app:srcCompat="@drawable/ic_addbutton" />

    <ImageView
        android:id="@+id/ivShoppingItemMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txShoppingItemName"
        app:layout_constraintStart_toEndOf="@+id/ivShoppingItemAdd"
        app:layout_constraintTop_toTopOf="@+id/ivShoppingItemAdd"
        app:srcCompat="@drawable/ic_minus" />


</androidx.constraintlayout.widget.ConstraintLayout>